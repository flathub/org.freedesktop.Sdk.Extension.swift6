{
    "id": "org.freedesktop.Sdk.Extension.swift6",
    "branch": "24.08",
    "runtime": "org.freedesktop.Sdk",
    "build-extension": true,
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.llvm18"
    ],
    "runtime-version": "24.08",
    "separate-locales": false,
    "build-options": {
        "prefix": "/usr/lib/sdk/swift6",
        "prepend-pkg-config-path": "/usr/lib/sdk/swift5/lib/pkgconfig/"
    },
    "cleanup": [
        "/share/info",
        "/share/man"
    ],
    "modules": [
        {
            "name": "swift",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "only-arches": ["x86_64"],
                    "url": "https://download.swift.org/swift-6.0.1-release/amazonlinux2/swift-6.0.1-RELEASE/swift-6.0.1-RELEASE-amazonlinux2.tar.gz",
                    "sha256": "08d280647396cc266465949290939950c70f15155f2131358afe4b3d5975fd5e"
                },
                {
                    "type": "archive",
                    "only-arches": ["aarch64"],
                    "url": "https://download.swift.org/swift-6.0.1-release/amazonlinux2-aarch64/swift-6.0.1-RELEASE/swift-6.0.1-RELEASE-amazonlinux2-aarch64.tar.gz",
                    "sha256": "c315af0eb26f11b3da2143be55876d52003cef9d1741ba835dae8c2153a60610"
                },
                {
                    "type": "file",
                    "path": "org.freedesktop.Sdk.Extension.swift6.metainfo.xml"
                }
            ],
            "build-commands": [
                "mkdir -p /usr/lib/sdk/swift6",
                "cp -R usr/* /usr/lib/sdk/swift6",
                "install -Dm644 org.freedesktop.Sdk.Extension.swift6.metainfo.xml $FLATPAK_DEST/share/metainfo/org.freedesktop.Sdk.Extension.swift6.metainfo.xml"
            ]
        },
        {
        "name": "SwiftLint",
        "buildsystem": "simple",
        "sources": [
        {
            "type": "archive",
            "url": "https://github.com/realm/SwiftLint/releases/download/0.57.0/swiftlint_linux.zip",
            "sha256": "def1803e705c738c97fbc275c34e7a2e0278944776a8b9c56ebe8c444ea57407"
        }
        ],
        "build-commands": [
            "cp swiftlint /usr/lib/sdk/swift6/bin/"
        ]
    },
        {
            "name": "swift-format",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/swiftlang/swift-format.git",
                    "commit": "65f9da9aad84adb7e2028eb32ca95164aa590e3b"
                },
                "generated-sources.json"
            ],
            "build-commands": [
                "./setup-offline.sh",
                "/usr/lib/sdk/swift6/bin/swift build -c release --skip-update",
                "strip -s .build/release/swift-format",
                "cp .build/release/swift-format /usr/lib/sdk/swift6/bin/"
            ]
        }
    ]
}
